  "devDependencies": {
    "@parcel/transformer-sass": "^2.11.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^6.1.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.11.0",
    "postcss": "^8.4.38",
    "postcss-preset-env": "^9.5.14",
    "posthtml-include": "^1.7.4",
    "prettier": "^3.3.1",
    "rimraf": "^5.0.1",
    "sharp": "^0.33.4",
    "tailwindcss": "^3.4.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "normalize.css": "^8.0.1",
    "postcss-cli": "^11.0.0",
